---
import type { LucideIcon } from "lucide-react";


interface StatsCardProps {
  title: string;
  value: string | number;
  icon: LucideIcon;
  trend?: {
    value: number;
    isPositive: boolean;
  };
  color?: string;
}
const { title, value, icon: Icon, trend, color = '#5FA5FA' }=Astro.props as StatsCardProps
---


<div class="bg-white p-6 rounded-lg shadow-sm">
      <div class="flex justify-between items-start">
        <div>
          <p class="text-sm text-gray-500 mb-1">{title}</p>
          <h3 class="text-2xl font-semibold text-gray-800">{value}</h3>
          {trend && (
            <p class={`text-sm mt-2 ${trend.isPositive ? 'text-green-500' : 'text-red-500'}`}>
              {trend.isPositive ? '↑' : '↓'} {Math.abs(trend.value)}%
            </p>
          )}
        </div>
        <div class="p-3 rounded-full" style={{ backgroundColor: `${color}20` }}>
          <Icon class="w-6 h-6" style={{ color }} />
        </div>
      </div>
    </div>