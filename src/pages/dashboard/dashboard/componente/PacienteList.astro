---
import { Calendar, CheckCheck, Clock, UserCheck } from 'lucide-react';
import extraerHora from '../../../../utils/extraerHora';
import formatDate from '../../../../utils/formatDate';

interface Atencion {
  id: string;
  pacienteId: string;
  nombrePaciente: string;
  inicioAtencion: string;
  obraSocial: string;
  estado?: string;
}
interface Props {
  ultimasAtenciones: Atencion[];
}
const { ultimasAtenciones } = Astro.props as Props;
---

<div class="grid gap-2 w-full">
  {
    ultimasAtenciones?.length === 0 ? (
      <div class="w-full">
        <div class="text-center py-5">
          <div class="w-12 h-12 mx-auto mb-3 rounded-full bg-gray-700/50 flex items-center justify-center">
            <CheckCheck className="w-8 h-8 text-gray-500" />
          </div>
          <p class="text-gray-400 font-medium mb-1">No hay Atenciones</p>
          <p class="text-gray-500 text-sm">Las atenciones aparecerán aquí</p>
        </div>
      </div>
    ) : (
      ultimasAtenciones?.map(aten => (
        <a
          href={`/dashboard/consultas/aperturaPaciente/${aten.pacienteId}/${aten.id}`}
          class="block rounded-lg bg-white border border-gray-200 hover:border-gray-300 transition-all duration-200 hover:shadow-sm p-3 w-full group"
        >
          <div class="flex justify-between items-center gap-3">
            {/* Información principal - Más compacta */}
            <div class="flex-1 min-w-0">
              <div class="flex items-center gap-2 mb-1">
                <UserCheck className="w-4 h-4 text-blue-600 flex-shrink-0" />
                <h3 class="font-semibold text-gray-900 text-sm truncate">{aten.nombrePaciente}</h3>
              </div>

              <div class="flex items-center gap-3 text-xs text-gray-600">
                <span class="flex items-center gap-1">
                  <Calendar className="w-3 h-3 text-blue-600" />
                  {formatDate(aten.inicioAtencion)}
                </span>
                <span class="flex items-center gap-1">
                  <Clock className="w-3 h-3 text-blue-600" />
                  {extraerHora(aten.inicioAtencion)}
                </span>
              </div>
            </div>

            {/* Obra social y estado - Más compactos */}
            <div class="flex flex-col items-end gap-1 flex-shrink-0">
              <span class="text-xs bg-blue-100 text-blue-800 px-2 py-1 rounded-full font-medium">
                {aten.obraSocial || 'Particular'}
              </span>
              {aten.estado && (
                <span class="text-xs bg-gray-100 text-gray-700 px-2 py-1 rounded-full font-medium">
                  {aten.estado}
                </span>
              )}
            </div>
          </div>
        </a>
      ))
    )
  }
</div>

<style>
  .group:hover h3 {
    color: #2563eb; /* Azul para indicar que es clickeable */
  }
</style>
