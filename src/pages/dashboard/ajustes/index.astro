  {
    id: 'facturacion',
    name: 'Facturacion y Aranceles',
    description: 'Define aranceles de prestaciones y configura datos para facturacion.',
    icon: DollarSign,
  },
  {
    id: 'whatsapp',
    name: 'WhatsApp',
    description:
      'Conecta tu WhatsApp para recibir mensajes de pacientes y configurar respuestas automaticas.',
    icon: Settings,
  },
  {
    id: 'suscripcion',
    name: 'Gestion de Suscripcion',
    description: 'Ver tu plan actual, limites de uso y opciones de facturacion.',
    icon: DollarSign,
  },
