---
import DivBox1 from '@/components/atomos/DivBox1.astro';
import db from '@/db';
import { pacienteProfesional, pacientes } from '@/db/schema';
import { and, eq } from 'drizzle-orm';
import ConfeccionTablaPaciente from './ConfeccionTablaPaciente';
const { session } = Astro.locals;
let pacientesData = [];
try {
  const dataDB = await db
    .select({
      id: pacientes.id,
      nombre: pacientes.nombre,
      apellido: pacientes.apellido,
      sexo: pacientes.sexo,
      celular: pacientes.celular,
      dni: pacientes.dni,
    })
    .from(pacientes)
    .innerJoin(pacienteProfesional, eq(pacienteProfesional.pacienteId, pacientes.id))
    .where(
      and(
        eq(pacienteProfesional.userId, session?.userId),
        eq(pacienteProfesional.pacienteId, pacientes.id)
      )
    );

  pacientesData = dataDB.map(paciente => {
    return {
      href: `/api/atencion/nueva?pacienteId=${paciente.id}`,
      id: paciente.id,
      nombreApellido: `${paciente.nombre}  ${paciente.apellido} `,
      dni: paciente.dni,
      edad: paciente.edad,
      sexo: paciente.sexo,
      celular: paciente.celular,
    };
  });
} catch (error) {
  console.log(error);
}
---

<DivBox1 styleDiv="w-full min-w-0 overflow-x-auto">
  <ConfeccionTablaPaciente pacientesData={pacientesData} client:load />
</DivBox1>
