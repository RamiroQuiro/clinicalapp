---
const mensaje = Astro.url.searchParams.get('mensaje') || 'Ocurrió un error al confirmar tu turno';
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Error - Confirmación de Turno</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-50 min-h-screen flex items-center justify-center p-4">
    <div class="max-w-md w-full bg-white rounded-lg shadow-lg p-8">
      <div class="text-center">
        <div
          class="mx-auto mb-4 w-16 h-16 bg-red-100 rounded-full flex items-center justify-center"
        >
          <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </div>
        <h1 class="text-2xl font-bold text-gray-900 mb-2">Error</h1>
        <p class="text-gray-600 mb-4">{mensaje}</p>
        <p class="text-sm text-gray-500">Por favor contacta con la clínica para más información.</p>
      </div>
    </div>
  </body>
</html>
