---
import ButtonSidebar from "../moleculas/ButtonSidebar.astro";
---

<sidebar
  class="sidebar print:hidden fixed bottom-0  z-40 md:top-0  left-0 md:w-[8vw] w-screen bg--bg-componentes md:h-screen flex md: pb-2 flex-col items-start justify-normal md:gap-2"
>
  <div class=" w-full h-2/6 hidden md:flex">
    <img src="/ramaCode.png" alt="ramaCode" width="100"height={"20"} class="w-11/12 object-scale-down">
  </div>
  <div class="flex flex-col items-start w-full md:gap-6">
    <div class="w-full flex items-center justify-normal gap-3">
      <div
        class="w-full pl-3 flex md:flex-col md:items-start items-center justify-evenly md:gap-4 mt-1 md:mt-5"
      >
        <ButtonSidebar span="inicio" href="/dashboard">
          <g id="SVGRepo_bgCarrier" stroke-width="0"></g><g
            id="SVGRepo_tracerCarrier"
            stroke-linecap="round"
            stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"
            ><path
              d="M3 13h8V3H3v10zm0 8h8v-6H3v6zm10 0h8V11h-8v10zm0-18v6h8V3h-8z"
            ></path></g
          >
        </ButtonSidebar>


        <ButtonSidebar span="pacientes" href="/dashboard/pacientes">
          <g id="SVGRepo_bgCarrier" stroke-width="0"></g><g
            id="SVGRepo_tracerCarrier"
            stroke-linecap="round"
            stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier">
            <path
              d="M1.5 6.5C1.5 3.46243 3.96243 1 7 1C10.0376 1 12.5 3.46243 12.5 6.5C12.5 9.53757 10.0376 12 7 12C3.96243 12 1.5 9.53757 1.5 6.5Z"
            ></path>
            <path
              d="M14.4999 6.5C14.4999 8.00034 14.0593 9.39779 13.3005 10.57C14.2774 11.4585 15.5754 12 16.9999 12C20.0375 12 22.4999 9.53757 22.4999 6.5C22.4999 3.46243 20.0375 1 16.9999 1C15.5754 1 14.2774 1.54153 13.3005 2.42996C14.0593 3.60221 14.4999 4.99966 14.4999 6.5Z"
            ></path>
            <path
              d="M0 18C0 15.7909 1.79086 14 4 14H10C12.2091 14 14 15.7909 14 18V22C14 22.5523 13.5523 23 13 23H1C0.447716 23 0 22.5523 0 22V18Z"
            ></path>
            <path
              d="M16 18V23H23C23.5522 23 24 22.5523 24 22V18C24 15.7909 22.2091 14 20 14H14.4722C15.4222 15.0615 16 16.4633 16 18Z"
            ></path>
          </g>
        </ButtonSidebar>

        <ButtonSidebar span="ajustes" href="/dashboard/ajustes">
          <g id="SVGRepo_bgCarrier" stroke-width="0"></g><g
            id="SVGRepo_tracerCarrier"
            stroke-linecap="round"
            stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier">
            <path d="M6 12L6 5" stroke-width="2" stroke-linecap="round"></path>
            <path d="M12 8L12 5" stroke-width="2" stroke-linecap="round"></path>
            <path d="M6 19L6 16" stroke-width="2" stroke-linecap="round"></path>
            <path d="M18 19L18 17" stroke-width="2" stroke-linecap="round"
            ></path>
            <path d="M12 19L12 12" stroke-width="2" stroke-linecap="round"
            ></path>
            <path d="M10 8L14 8" stroke-width="2" stroke-linecap="round"></path>
            <path d="M4 16L8 16" stroke-width="2" stroke-linecap="round"></path>
            <path d="M16 17H20" stroke-width="2" stroke-linecap="round"></path>
            <path d="M18 13L18 5" stroke-width="2" stroke-linecap="round"
            ></path>
          </g>
        </ButtonSidebar>

        <div></div>
      </div>
    </div>
  </div>
</sidebar>

<style>
  .sidebar{
    height: 100vh;
    background: 
    linear-gradient(-52deg,#d1d1d150 30%,transparent 20%),
    linear-gradient(65deg,#f3f3f350 40%,transparent 30%),
    linear-gradient(to bottom, #FFFFFF 60%,#132230 100%);
    
}
.logoSidebar{
    -webkit-filter: drop-shadow(1px 1px 0px rgb(209, 209, 209));
}
</style>