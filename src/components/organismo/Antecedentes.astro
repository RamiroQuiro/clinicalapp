---
import { AlertCircle, Heart } from "lucide-react";
import DivBox1 from "../atomos/DivBox1.astro";
import ContenedorTitleBotonera from "../atomos/ContenedorTitleBotonera.astro";
import Button1 from "../atomos/Button1.astro";
import type { MedicalCondition } from "../../types";
import CardAntecedentes from '../../components/moleculas/CardAntecedentes.astro'
import ContenedeorModal from "./ContenedeorModal.astro";
import FormularioPaciente from "../../pages/dashboard/pacientes/FormularioPaciente.astro";
import FormularioAntecedentes from "./FormularioAntecedentes.astro";
interface MedicalHistoryProps {
  conditions: MedicalCondition[];
}

const { conditions } = Astro.props as MedicalHistoryProps;

const personalConditions = conditions.filter((c) => c.type === "personal");
const familyConditions = conditions.filter((c) => c.type === "family");
---

<DivBox1>
  <div class="flex flex-col items-center w-full justify-between">
    <ContenedorTitleBotonera>
      <h2 class="text font-semibold">Historial Médico</h2>
      <div>
        <Button1>ver más</Button1>
        <ContenedeorModal open="agregar" >
            <FormularioAntecedentes/>
        </ContenedeorModal>
      </div>
    </ContenedorTitleBotonera>

    <div class="space- flex flex-col gap-y-6 w-full">
      <div>
        <h3 class="text-base font-medium mb-1.5">Antecedentes Personales</h3>
        <div class="space-y-3">
          {
            personalConditions.map((condition, index) => (
           <CardAntecedentes condition={condition}/>
            ))
          }
        </div>
      </div>

      <div>
        <h3 class="text- font-medium mb-1.5">Antecedentes Familiares</h3>
        <div class="space-y-3">
          {
            familyConditions.map((condition, index) => (
            <CardAntecedentes condition={condition}/>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</DivBox1>
