---
import { Calendar, Clock, Stethoscope, User } from 'lucide-react';
import DivBox1 from '../atomos/DivBox1.astro';

const { turnos, currentUserId, pacienteId } = Astro.props;

function formatDate(dateString: string | Date) {
  if (!dateString) return '';
  return new Date(dateString).toLocaleDateString('es-AR', {
    day: '2-digit',
    month: 'short',
    year: 'numeric',
  });
}
---

<DivBox1 class="w-full text-primary-texto">
  <details class="w-full group">
    <summary
      class="px-4 py-3
    hover:bg-primary-bg-componentes
    duration-300
    cursor-pointer
   
    flex items-center justify-between
    hover:bg-opacity-90"
    >
      <div class="flex items-center gap-2">
        <Calendar className="w-5 h-5 text-primary-500" />
        <span class="font-semibold text-primary-textoTitle">Próximos Turnos</span>
        {
          turnos && turnos.length > 0 && (
            <span class="bg-primary-100 text-primary-700 text-xs px-2 py-0.5 rounded-full font-bold">
              {turnos.length}
            </span>
          )
        }
      </div>
      <span
        class="text-sm text-primary-100 font-medium group-open:hidden animate-aparecer duration-300"
        >Ver más</span
      >
      <span
        class="text-sm text-primary-100 font-medium hidden group-open:inline animate-aparecer duration-300"
        >Ver menos</span
      >
    </summary>

    <div class="mt-2 p-4">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        {
          turnos && turnos.length > 0 ? (
            turnos.map((turno: any) => (
              <div class="bg-white border border-gray-100 rounded-lg p-3 shadow-sm hover:shadow-md transition-shadow flex flex-col gap-2">
                <div class="flex justify-between items-start border-b border-gray-50 pb-2">
                  <div class="flex items-center gap-2 text-primary-700 font-semibold">
                    <Calendar className="w-4 h-4" />
                    <span>{formatDate(turno.fecha)}</span>
                  </div>
                  <div class="flex items-center gap-1 text-gray-500 text-sm bg-gray-50 px-2 py-0.5 rounded">
                    <Clock className="w-3 h-3" />
                    <span>{turno.hora}</span>
                  </div>
                </div>

                <div class="flex flex-col gap-1 text-sm">
                  <div class="flex items-start gap-2 text-gray-700">
                    <Stethoscope className="w-4 h-4 text-gray-400 mt-0.5" />
                    <span class="font-medium leading-tight">
                      {turno.motivoConsulta || 'Consulta General'}
                    </span>
                  </div>
                  <div class="flex items-center gap-2 text-gray-500">
                    <User className="w-4 h-4 text-gray-400" />
                    <span class="truncate">{turno.profesional}</span>
                  </div>
                </div>
              </div>
            ))
          ) : (
            <div class="text-sm text-gray-500 text-center col-span-full py-6 flex flex-col items-center gap-2 bg-gray-50 rounded-lg border border-dashed border-gray-200">
              <Calendar className="w-8 h-8 text-gray-300" />
              <p>No hay próximos turnos programados.</p>
            </div>
          )
        }
      </div>
    </div>
  </details>
</DivBox1>
