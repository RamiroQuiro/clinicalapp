---

interface Visit {
  date: string;
  reason: string;
  doctor: string;
  department: string;
}

interface RecentVisitsProps {
  visits: Visit[];
}

const {visits}=Astro.props as RecentVisitsProps
---
<div class="bg-white rounded-lg shadow-sm p-6 mb-6">
    <div class="flex justify-between items-center mb-4">
      <h2 class="text-lg font-semibold">Visitas Recientes</h2>
      <button class="text-sm text-primary-foreground hover:text-primary-foreground/80">
        Ver todas
      </button>
    </div>
    
    <div class="overflow-x-auto">
      <table class="w-full">
        <thead>
          <tr class="text-left border-b">
            <th class="pb-3 text-sm font-medium text-muted-foreground">Fecha</th>
            <th class="pb-3 text-sm font-medium text-muted-foreground">Motivo</th>
            <th class="pb-3 text-sm font-medium text-muted-foreground">Doctor</th>
            <th class="pb-3 text-sm font-medium text-muted-foreground">Departamento</th>
          </tr>
        </thead>
        <tbody>
          {visits.map((visit, index) => (
            <tr key={index} class="border-b last:border-0">
              <td class="py-4 text-sm">{visit.date}</td>
              <td class="py-4 text-sm">{visit.reason}</td>
              <td class="py-4 text-sm">{visit.doctor}</td>
              <td class="py-4 text-sm">
                <span class="px-2 py-1 text-xs font-medium rounded-full bg-primary text-primary-foreground">
                  {visit.department}
                </span>
              </td>
            </tr>
          ))}
        </tbody>
      </table>
    </div>
  </div>