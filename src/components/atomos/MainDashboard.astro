---
const { title, dataIds, h1, pacienteId } = Astro.props;

const { user, session } = Astro.locals;
---

<div
  data-usisisi={user?.id}
  data-pasisisi={pacienteId ? pacienteId : 0}
  class="w-full h-full flex flex-col items-stretch justify-start"
>
  {
    h1 && (
      <div class="w-full px-5 flex items-center justify-between ">
        <h1 class="text-xl ml-6 font-semibold text-primary-textoTitle ">{h1}</h1>
      </div>
    )
  }
  <div class="w-full px-5 flex flex-col items-start justify-start rounded-lg h-full">
    <slot />
  </div>
</div>
