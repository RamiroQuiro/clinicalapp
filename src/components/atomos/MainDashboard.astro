---
const { title, dataIds, h1, pacienteId } = Astro.props;

const { user, session } = Astro.locals;
---

<div
  data-usisisi={user?.id}
  data-pasisisi={pacienteId ? pacienteId : 0}
  class="w-full h-full flex flex-col items-stretch justify-center"
>
  {
    h1 && (
      <div class="w-full py-2 md:px-5 px-2 flex items-center justify-between ">
        <h1 class="text-lg  font-semibold text-primary-textoTitle ">{h1}</h1>
      </div>
    )
  }
  <div class="w-full md:px-5 px-2 flex flex-col items-center justify-center rounded-lg h-full">
    <slot />
  </div>
</div>
